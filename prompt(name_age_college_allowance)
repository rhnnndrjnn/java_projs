import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int choice;

        do {
            System.out.print("[1] Enter your name: "); String name = sc.nextLine();

            System.out.print("[2] Enter your age: "); int age = sc.nextInt();
            sc.nextLine();

            System.out.print("[3] Enter your college: "); String college = sc.nextLine();

            System.out.print("[4] Enter your allowance: "); double allowance = sc.nextDouble();
            sc.nextLine();

            System.out.println("\n--- Student Information ---");
            System.out.print("Name: "); System.out.println(name);
            System.out.print("Age: "); System.out.println(age);
            System.out.print("College: "); System.out.println(college);
            System.out.print("Allowance: "); System.out.println(allowance);

            System.out.print("\nDo you want to try again?");
            System.out.print("\n[1] Yes");
            System.out.print("\n[2] No");
            System.out.print("\nYour choice: ");
            choice = sc.nextInt();
            sc.nextLine();

        } while (choice == 1);

        System.out.println("Program ended.");
        sc.close();
    }
}
